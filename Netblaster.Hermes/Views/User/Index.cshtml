@model Netblaster.Hermes.DAL.Model.ApplicationUser

<div class="content">

    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Twój profil
                </div>
                <div class="panel-body">

                    <div class="tab-content">
                        <div id="step1" class="p-m tab-pane active">
                        @using (Html.BeginForm("Index", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="row">
                                    <div class="col-lg-9">
                                        @Html.HiddenFor(x => x.Id)
                                        <div class="row">
                                            <div class="form-group col-lg-6">
                                                <label>Imię</label>
                                                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                                            </div>
                                            <div class="form-group col-lg-6">
                                                <label>Nazwisko</label>
                                                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                                            </div>
                                            <div class="form-group col-lg-6">
                                                <label>Stanowisko</label>
                                                @Html.TextBoxFor(x => x.JobTitle, new { @class = "form-control" })
                                            </div>
                                            <div class="form-group col-lg-6">
                                                <label>E-mail</label>
                                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control"})
                                            </div>
                                            <div class="form-group col-lg-6">
                                                <label>Numer telefonu</label>
                                                @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                                            </div>
                                            <div class="form-group col-lg-12">
                                                <label>Zdjęcie</label><br/>
                                                <img src="@Model.PhotoImage" class="img-circle m-b" alt="logo" style="width: 75px; height: 75px;">
                                                <input type="file" name="Photo" id="fileUpload" accept=".png, .jpg"/>
                                                @Html.ValidationMessageFor(model => model.Photo)
                                            </div>
                                        </div>
                                        <div class="text-right m-t-xs">
                                            <button type="submit" class="btn btn-success">Zmień dane</button>
                                        </div>
                                    </div>
                            </div>


                        }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>