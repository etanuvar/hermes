@model Netblaster.Hermes.DAL.Model.ApplicationUser

<div class="content">

    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    Szczegóły użytkownika @Model.DisplayName
                </div>
                <div class="panel-body">
                    <div class="pull-right">
                        <button type="button" id="banUser" class="btn btn-sm btn-primary margin-right-xs"
                                data-toggle="modal" data-target="#sendMessage">
                            <i class="fa fa-envelope margin-right-xs"></i>Wyślij wiadomość
                        </button>
                        <button type="button" id="banUser" class="btn btn-sm btn-danger margin-right-xs">
                            <i class="fa fa-window-close margin-right-xs"></i>Zablokuj użytkownika
                        </button>
                    </div>
                    <div class="tab-content">
                        <div id="step1" class="p-m tab-pane active">
                            <div class="row">
                                <div class="col-lg-9">
                                    @Html.HiddenFor(x => x.Id)
                                    <div class="row">
                                        <div class="form-group col-lg-2">
                                            <label>Zdjęcie</label><br/>
                                            <img src="@Model.PhotoImage" class="img-circle m-b" alt="logo" style="width: 75px; height: 75px;">
                                        </div>
                                        <div class="form-group col-lg-4">
                                            <label>Imię</label>
                                            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @disabled="disabled" })
                                        </div>
                                        <div class="form-group col-lg-6">
                                            <label>Nazwisko</label>
                                            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                        <div class="form-group col-lg-10">
                                            <label>Stanowisko</label>
                                            @Html.TextBoxFor(x => x.JobTitle, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                        <div class="form-group col-lg-6">
                                            <label>E-mail</label>
                                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @disabled = "disabled" })
                                        </div>
                                        <div class="form-group col-lg-6">
                                            <label>Numer telefonu</label>
                                            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", @disabled = "disabled" })
                                        </div>

                                    </div>
                                    @*<div class="text-right m-t-xs">
                                            <button type="submit" class="btn btn-success">Zmień dane</button>
                                        </div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="sendMessage" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="color-line"></div>
            <div class="modal-header text-center">
                <h4 class="modal-title">Wyślij wiadomość</h4>
                <small class="font-bold">Wyślij wiadomość do użytkownika @Model.DisplayName.</small>
            </div>
            @using (Html.BeginForm("SendMessage", "Management", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.Id)
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <input type="hidden" name="UserId" id="UserId" value="@Model.Id"/>
                            <div class="form-group">
                                <label>Wiadomość</label>
                                <textarea id="Message" name="Message" class="form-control" required="required"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Zamknij</button>
                    <button type="submit" class="btn btn-primary"><i class="fa fa-envelope margin-right-xs"></i>Wyślij</button>
                </div>
            }

        </div>
    </div>
</div>