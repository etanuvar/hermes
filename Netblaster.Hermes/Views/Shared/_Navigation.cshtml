@using Netblaster.Hermes.DAL.Model
@using Netblaster.Hermes.WebUI.Helpers
@{
    var user = (ApplicationUser) Session["ApplicationUser"]; 
}
<div id="navigation">
    <div class="profile-picture">


        <div class="stats-label text-color">
            
            <a href="@Url.Action("Index", "Home")">
                <a style="border: 0px" href="/User/Index">
                    <img src="@user.PhotoImage" class="img-circle m-b" alt="logo" style="width: 75px; height: 75px;">
                </a>
            </a>
            <br/>
            <span class="font-extra-bold font-uppercase">@user.UserName</span>
            <div class="dropdown">
                <a class="dropdown-toggle" href="#" data-toggle="dropdown">
                    <small class="text-muted">@user.JobTitle @*<b class="caret"></b>*@</small>
                    <small class="text-muted">@user.Email</small>
                </a>
            </div>
        </div>
    </div>
    
    <ul class="nav metismenu" id="side-menu">
        

        <li class="nav-header">Zadania</li>
        <li class="@Html.IsSelected(controller: "Home", action: "Dashboard")">
            <a class="preloadable" href="@Url.Action("Dashboard", "Home")"><i class="fa fa-dashboard margin-right-sm"></i>Statystyki</a>
        </li>
        <li class="@Html.IsSelected(controller: "Calendar", action: "Index")">
            <a class="preloadable" href="@Url.Action("Index", "Calendar")"><i class="fa fa-calendar margin-right-sm"></i>Kalendarz</a>
        </li>
        <li class="@Html.IsSelected(controller: "Task", action: "Index")">
            <a class="preloadable" href="@Url.Action("Index", "Task")"><i class="fa fa-tasks margin-right-sm"></i>Zadania</a>
        </li>
        @*<li class="@Html.IsSelected(controller: "Task", action: "OnlyMy")">
            <a class="preloadable" href="@Url.Action("OnlyMy", "Task")"><i class="fa fa-clock-o margin-right-sm"></i>Statusy zadań</a>
        </li>*@

    <li class="nav-header">Kontakty</li>
        <li class="@Html.IsSelected(controller: "Contact", action: "Add")">
            <a class="preloadable" href="@Url.Action("Add", "Contact")"><i class="fa fa-plus-circle margin-right-sm"></i>Dodaj kontakt</a>
        </li>
        <li class="@Html.IsSelected(controller: "Contact", action: "Index")">
            <a class="preloadable" href="@Url.Action("Index", "Contact")"><i class="fa fa-address-book margin-right-sm"></i>Lista kontaktów</a>
        </li>

    <li class="nav-header">Optima</li>
        <li class="@Html.IsSelected(controller: "Other")">
            <a class="preloadable" href="@Url.Action("Index", "Other")"><i class="fa fa-users margin-right-sm"></i>Lista kontrahentów</a>
        </li>
    <li class="nav-header">Informacje</li>
        <li class="@Html.IsSelected(controller: "Management", action: "Users")">
            <a class="preloadable" href="@Url.Action("Users", "Management")"><i class="fa fa-user-circle margin-right-sm"></i>Użytkownicy</a>
        </li>
        <li class="@Html.IsSelected(controller: "Management", action: "Groups")">
            <a class="preloadable" href="@Url.Action("Groups", "Management")"><i class="fa fa-user-plus margin-right-sm"></i>Grupy</a>
        </li>
        <li class="@Html.IsSelected(controller: "User", action: "Messages")">
            <a class="preloadable" href="@Url.Action("Messages", "User")"><i class="fa fa-envelope-o margin-right-sm"></i>Wiadomości</a>
        </li>
    </ul>
</div>