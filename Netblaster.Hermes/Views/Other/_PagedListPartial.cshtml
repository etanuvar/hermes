@model PagedList.IPagedList<Netblaster.Hermes.BLL.DTOs.ClientListDto>
@{
    string currentSort = ViewBag.SortParam;
    int pageSize = ViewBag.PageSize;
}
@using Netblaster.Hermes.WebUI.Helpers
@using PagedList.Mvc;

<input type="hidden" id="total-item-count" value="@Model.TotalItemCount" />
<div class="content animated-panel">
    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                    <div class="font-normal panel-title">
                        Kontrahenci (<span id="total-item-count-display">@Model.TotalItemCount</span>)
                    </div>
                </div>

                <div class="panel-body" style="display: block;">
                    <div class="form-inline">
                        <div class="pagination-example">
                            <div class="col-sm-6 no-padding-left">
                                @Html.PagedListPager(Model, page => "javascript: PagedListSectionApp.reloadPager(" + page + ")")
                            </div>
                            <div class="col-sm-6">
                                @Html.Partial("~/Views/Shared/PagedLists/_PageSizeBar.cshtml", pageSize)
                            </div>
                        </div>
                        <table class="table table-bordered table-condensed table-hover" id="table-data" style="margin-top:10px;">
                            <tr>
                                <th class="col-md-2">
                                    <a href="javascript:void(0)" class="sort-link" data-sort-param="Knt_Nazwa1" data-previous-sort="@currentSort">Nazwa firmy</a>
                                    @Html.SortIdentifier(currentSort, "Knt_Nazwa1")
                                </th>
                                <th class="col-md-1">
                                    <a href="javascript:void(0)" class="sort-link" data-sort-param="Knt_Nip" data-previous-sort="@currentSort">NIP</a>
                                    @Html.SortIdentifier(currentSort, "Knt_Nip")
                                </th>
                                <th class="col-md-2">
                                    <a href="javascript:void(0)" class="sort-link" data-sort-param="Knt_Powiat" data-previous-sort="@currentSort">Miasto</a>
                                    @Html.SortIdentifier(currentSort, "Knt_Powiat")
                                </th>
                                <th class="col-md-2">
                                    <a href="javascript:void(0)" class="sort-link" data-sort-param="Knt_Ulica" data-previous-sort="@currentSort">Ulica</a>
                                    @Html.SortIdentifier(currentSort, "Knt_Ulica")
                                </th>
                                <th class="col-md-1">
                                    <a href="javascript:void(0)" class="sort-link" data-sort-param="Knt_KodPocztowy" data-previous-sort="@currentSort">Kod pocztowy</a>
                                    @Html.SortIdentifier(currentSort, "Knt_KodPocztowy")
                                </th>
                                <th class="col-md-2">
                                    <a href="javascript:void(0)" class="sort-link" data-sort-param="Knt_Telefon1" data-previous-sort="@currentSort">Telefon</a>
                                    @Html.SortIdentifier(currentSort, "Knt_Telefon1")
                                </th>
                                <th class="col-md-2">
                                    <a href="javascript:void(0)" class="sort-link" data-sort-param="Knt_Email" data-previous-sort="@currentSort">E-mail</a>
                                    @Html.SortIdentifier(currentSort, "Knt_Email")
                                </th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr class="audit-row" element-id="@item.Knt_KntId" style="cursor: pointer">
                                    <td class="col-md-2">@item.Knt_Nazwa1</td>
                                    <td class="col-md-1">@item.Knt_Nip</td>
                                    <td class="col-md-2">@item.Knt_Miasto</td>
                                    <td class="col-md-2">@item.Knt_Ulica</td>
                                    <td class="col-md-1">@item.Knt_KodPocztowy</td>
                                    <td class="col-md-2">@item.Knt_Telefon1</td>
                                    <td class="col-md-3">@item.Knt_Email</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


